@page
@model MinhND.Asm2.Web.Pages.DetailsModel
@{
    <div class="container mt-5">
        <h2 class="text-center">Details</h2>

        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label for="productName">Product Name</label>
                    <div id="productName" class="form-control">
                        @Html.DisplayFor(product => product.Product.ProductName)
                    </div>
                </div>

                <div class="form-group">
                    <label for="productImage">Image</label>
                    <div id="productImage" class="form-control">
                        @Html.DisplayFor(product => product.Product.ProductImage)
                    </div>
                </div>

                <div class="form-group">
                    <label for="quantity">Quantity</label>
                    <div id="quantity" class="form-control">
                        @Html.DisplayFor(product => product.Product.QuantityPerUnit)
                    </div>
                </div>

                <div class="form-group">
                    <label for="unitPrice">Price</label>
                    <div id="unitPrice" class="form-control">
                        @Html.DisplayFor(product => product.Product.UnitPrice)
                    </div>
                </div>

                <div class="form-group">
                    <label for="categoryName">Category</label>
                    <div id="categoryName" class="form-control">
                        @Html.DisplayFor(product => product.Category.CategoryName)
                    </div>
                </div>
                <br />
                <a asp-page="/Index" class="btn btn-secondary">Back to List</a>

            </div>
        </div>
    </div>
}
